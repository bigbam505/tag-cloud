<h2>Tags</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td>
          <span class="badge badge-info"><%= tag.mapped_values.count %></span>
          <%= link_to tag.name, tag_path(tag) %>
        </td>
        <td>
          <div class="pull-right">
            <%= link_to 'Edit', edit_tag_path(tag), class: 'btn btn-primary btn-small' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to 'Add Tag', new_tag_path, class: 'btn btn-primary' %>
</div>
