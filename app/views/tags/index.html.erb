<h2>Tags</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td>
          <span class="badge badge-info"><%= tag.mapped_values.count %></span>
          <%= tag.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to 'Add Tag', new_tag_path, class: 'btn btn-primary' %>
</div>
